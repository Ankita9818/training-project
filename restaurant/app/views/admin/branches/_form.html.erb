<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel login-form">
      <div class="panel-heading text-center text-uppercase">
        Enter Restaurant Details
      </div>
      <%= render 'shared/errors', model: @branch %>
      <div class="panel-body">
        <%= form_for [:admin, @branch], html: { class: 'form-horizontal'} do |form| %>
          <div class="form-group">
            <div class="col-sm-12 form-label-group" data-id="form-label-group">
              <%= form.text_field :name, size: 40, class: 'form-control form-control-input', :'data-id'=>"form-control-input" %>
              <%= form.label :name, 'Enter branch name', class: "control-label", :'data-id'=>"control-label" %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-12 form-label-group" data-id="form-label-group">
              <%= form.time_field :opening_time, size: 40, class: 'form-control form-control-input', :'data-id'=>"form-control-input" %>
              <%= form.label :opening_time, 'Enter opening time', class: "control-label", :'data-id'=>"control-label" %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-12 form-label-group" data-id="form-label-group">
              <%= form.time_field :closing_time, size: 40, class: 'form-control form-control-input', :'data-id'=>"form-control-input" %>
              <%= form.label :closing_time, 'Enter closing time', class: "control-label", :'data-id'=>"control-label" %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-12">
              <%= submit_tag 'Continue', class: 'btn btn-danger btn-site-primary btn-lg btn-block text-uppercase' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>