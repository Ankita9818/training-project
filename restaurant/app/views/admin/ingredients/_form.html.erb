<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel login-form">
      <div class="panel-heading text-center text-uppercase">
        Enter Ingredient Details
      </div>
      <%= render 'shared/errors', model: @ingredient %>
      <div class="panel-body">
        <%= form_for [:admin, @ingredient], html: { class: 'form-horizontal'} do |form| %>
          <div class="form-group">
            <div class="col-sm-12 form-label-group" data-id="form-label-group">
              <%= form.text_field :name, size: 40, class: 'form-control form-control-input', :'data-id'=>"form-control-input" %>
              <%= form.label :name, 'Enter ingredient name', class: "control-label", :'data-id'=>"control-label" %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-12 form-label-group" data-id="form-label-group">
              <%= form.number_field :price, class: 'form-control form-control-input', :'data-id'=>"form-control-input" %>
              <%= form.label :price, 'Enter the price', class: "control-label", :'data-id'=>"control-label" %>
            </div>
          </div>
          <div class="form-group margin-bottom-0">
            <%= form.label :category_veg do %>
              <div class="col-sm-12">
                <%= form.radio_button :category, 0%>
                <span class="checkbox-label text-capitalize">Veg</span>
              </div>
            <% end %>
          </div>
          <div class="form-group margin-bottom-0">
            <%= form.label :category_nonveg do %>
              <div class="col-sm-12">
                <%= form.radio_button :category, 1%>
                <span class="checkbox-label text-capitalize">non Veg</span>
              </div>
            <% end %>
          </div>
          <div class="form-group">
            <%= form.label :extra_allowed do %>
              <div class="col-sm-12">
                <%= form.check_box :extra_allowed%>
                <span class="checkbox-label">Add extra Cheese</span>
              </div>
            <% end %>
          </div>
          <div class="form-group">
            <div class="col-sm-12">
              <%= submit_tag 'Continue', class: 'btn btn-danger btn-site-primary btn-lg btn-block text-uppercase' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
